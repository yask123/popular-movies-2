<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:fillViewport="true">

<LinearLayout
    android:id="@+id/ll_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">


        <ImageView
            android:id="@+id/ivPosterImage"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"

            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/large_movie_poster" />


        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ivPosterImage"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/ivPosterImage"
            android:text="The Dark Knight"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ratings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tvTitle"
            android:layout_below="@+id/tvTitle"
            android:layout_marginEnd="27dp"
            android:layout_marginTop="10dp"
            android:text="Critics Score: 93%"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivPosterImage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Overview" />

        <Button
            android:id="@+id/fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/ratings"
            android:layout_alignRight="@id/ivPosterImage"
            android:layout_below="@+id/ratings"
            android:layout_marginTop="29dp"
            android:text="Favourite" />


    </RelativeLayout>


</LinearLayout>

</ScrollView>